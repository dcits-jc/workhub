

  <!-- 个人信息 -->
  <div class="col-md-12">
    <a href="#" class="thumbnail">
      <!-- 显示该用户头像 -->
      <%= render 'common/other_user_avatar_xl' %>
    </a>        

    <!-- 用户名和用户昵称 -->
    <h2><%= @user.name %>#<%= @user.itcode %></h2>
    <% if @user.is_admin? %>
      <h3><code>管理员</code></h3> 
    <% end %>  

    <h4><%= @user.team.present? ? @user.team.name : nil %></h4>
    <p><%= @user.title %></p>  






    <!-- 显示当前用户等级-->
    <% if @user.level.present? %>
      <% case @user.level %>
      <% when '专家' %>
        <p>
          <img src="http://p123oziiu.bkt.clouddn.com/level_s.png" alt="s.png" title="s.png" class="level_sign" />
          <span class="level_info"><em>专家</em></span>
        </p> 
      <% when '高级' %>
        <p>
          <img src="http://p123oziiu.bkt.clouddn.com/level_a.png" alt="a.png" title="a.png" class="level_sign" />
          <span class="level_info"><em>高级</em></span>
        </p>
      <% when '中级' %>
        <p>
          <img src="http://p123oziiu.bkt.clouddn.com/level_b.png" alt="b.png" title="b.png" class="level_sign" />
          <span class="level_info"><em>中级</em></span>
        </p> 
      <% when '初级' %>
        <p>
          <img src="http://p123oziiu.bkt.clouddn.com/level_c.png" alt="c.png" title="c.png" class="level_sign" />
          <span class="level_info"><em>初级</em></span>
        </p>          
      <% end %>

      <!-- 显示当前用户等级-->
    <% end %>






    <hr>
  </div>

