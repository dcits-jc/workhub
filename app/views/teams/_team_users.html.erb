<div class="row">
  <div class="col-md-12">

    <div class="panel panel-default">
      <div class="panel-heading">
        <strong>成员</strong> 
            <kbd><%= @current_team.users.count %></kbd>
      </div>
      <div class="panel-body">

        <div class="row">
          <% @current_team.users.each do |u| %>
            <div class="col-md-12">
              <span>
                <!-- 用户链接 -->
                <%= link_to user_path(u) do %>
                  <%= user_avatar(u,{style: "width: 20px;height: 20px;"}) %>
                  <strong><%= u.name %></strong> 
                <% end %>

                <!-- 用户当周饱和量 -->
                  <span class="pie"><%=u.time_workloads(@start_date,@end_date)%>/40</span>
              
              </span>
            </div>
          <% end %>
        </div>

      </div>
    </div>

    
  </div>
</div>


