<div class="row">
  <!-- 首部信息 -->
  <div class="col-md-9">



    <div class="row">
      <div class="col-md-12">
        <table class="table table-hover table-condensed">
          <thead>
            <tr>
              <td>子团队 <kbd><%= @current_team.children.count %></kbd></td>
              <td>成员</td>
            </tr>
          </thead>
          <tbody>
            <% @children_teams.each do |t| %>
            <tr>
              <td>
                <strong><%= link_to(t.name,week_teams_path({team_id: t})) %></strong>
              </td>
               <td><kbd><%= t.users.count %></kbd> </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>



    <!-- 导航栏 -->
    <ol class="breadcrumb">
      <!-- 周开始与结束时间 -->
      <li class="active">
        <small>
          <%= strf(@start_date) %> ~ <%= strf(@end_date) %>  
        </small>
      </li>
      <%= link_to week_teams_path(start_date: @start_date,end_date: @end_date,format: "xls"),class: 'pull-right',title: '导出工作量'  do%>
        <span class="glyphicon glyphicon-save"></span>
      <% end %>
    </ol>



    <!-- 模态框 -->
    <%#= render 'dialogforms/project_workflow_dialog.html.erb' %>





    <!-- 本周的 feeds -->
    <%= render 'common/feeds' %>

  </div>


  <!-- 右侧边 -->
  <div class="col-md-3 hidden-xs hidden-sm">
    <%= render 'team_users' %>
    <div class="row">
      <br>
    </div>
    <%= render 'team_history' %>
  </div>

</div>