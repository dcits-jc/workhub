<!-- 导航栏 -->
<ol class="breadcrumb">
  <li class="active">全部解决方案 <kbd><%= @solutions.count %></kbd></li>
</ol>

<%= link_to('+ 新建方案',new_admin_solution_path,class: 'btn btn-primary btn-xs') %>


<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <td>方案名</td>
      <td>操作</td>
    </tr>
  </thead>
  <tbody>
    <% @solutions.each do |s| %>
    <tr>
      <td><%= link_to(s.name,wechatpage_solution_path(s),target: '_blank') %></td>
      <td><%= link_to('编辑',edit_admin_solution_path(s)) %></td>
    </tr>
    <% end %>
  </tbody>

</table>





