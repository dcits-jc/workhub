<div class="alert alert-info" role="alert">
  当周在进行项目 <%= @projects.count %>
</div>

<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <td></td>
      <td>项目号</td>
      <td>项目名</td>
      <td>成员数</td>
      <td>销售</td>
      <td>项目经理</td>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |p| %>

    <% if p.enabled?  %>
      <tr>
        <td></td>
    <% else %>
      <tr class="alert alert-danger">
        <td><span class="glyphicon glyphicon-ban-circle"></span></td>
    <% end %>
      <td>
        <% if p.code.present? %>
          <strong><%= p.code %></strong>
        <% end %>
      </td>
      <td><strong><%= link_to(p.name,admin_project_path(p)) %></strong></td>
      <td><kbd><%= p.members.count %></kbd> </td>
      <td><small><%= p.sales.name %> </small> </td>
      <td>
        <% p.managers.each do |m| %>
          <code><%= m.name %></code>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>

</table>




