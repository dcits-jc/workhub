<%= simple_form_for [:admin,@training_tag] do |f| %>
  <%= f.input :name,label: '标签名称', input_html: { class: "form-control",placeholder: "填写标签名"} %>




   <%= f.input :training_type,label: '标签类型',placeholder: "选择标签类型", collection:[['厂商','厂商'],['解决方案','解决方案'],['通用','通用']] %>



  <%= f.submit "提交", class: "btn btn-primary", data: { disable_with: "提交中..." } %>
<% end %>
