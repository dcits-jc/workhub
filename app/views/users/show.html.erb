<div class="row">
  <!-- 首部信息 -->
  <div class="col-md-9">


    <!-- 导航栏 -->
    <ol class="breadcrumb">
      <!-- 周开始与结束时间 -->
      <li class="active">
        <small>
          <%= week_begin(@current_time) %> ~ <%= week_end(@current_time) %>  
        </small>
      </li>
    </ol>

    

    <!-- 按钮与表单 -->
    <div class="row">
      <div class="col-md-12">

        <div class="pull-left">
          <p> 


          </p>
        </div>          
        <div class="pull-right">
          <strong>当周工作量 <u><span class="lead">(
            <% if @current_week_workloads == 0 %>
              <span style="color: #f00">0h</span>
            <% else %>
              <%= @current_week_workloads %>h
            <% end %>
          / 40h )</span> </u></strong>
        </div>
      </div>
      
    </div>
    

    <!-- 本周的 feeds -->
    <%= render 'common/feeds' %>

  </div>


  <!-- 右侧边 -->
  <div class="col-md-3 hidden-xs hidden-sm">
    <%= render 'common/history_sidebar' %>
  </div>

</div>