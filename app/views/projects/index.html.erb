<!-- 导航栏 -->
<ol class="breadcrumb">
  <li class="active">历史项目 <kbd><%= @projects.count %></kbd></li>
</ol>



<%= link_to('+ 新建项目',new_project_path,class: 'btn btn-primary btn-xs') %>
<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <td></td>
      <td>项目名</td>
      <td>成员数</td>
      
      <td>销售</td>
      <td>项目经理</td>
      <td>创建者</td>
      <!-- <td>项目描述</td> -->
    </tr>
  </thead>
  <tbody>
    <% @projects.each do |p| %>

    <% if p.enabled?  %>
      <tr>
        <td></td>
    <% else %>
      <tr class="alert alert-danger">
        <td><span class="glyphicon glyphicon-ban-circle"></span></td>
    <% end %>

      <td><strong><%= link_to(p.name,project_path(p)) %></strong></td>
      <td><kbd><%= p.members.count %></kbd> </td>
      
 
      <td><code><%= p.sales.name %></code></td>
      
      <td>
        <% p.managers.each do |m| %>
          <code><%= m.name %></code>
        <% end %>
      </td>
      <td><code><%= p.builder.name %></code></td>
      
    </tr>
    <% end %>
  </tbody>

</table>