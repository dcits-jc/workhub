              <div class="col-md-12">
              <blockquote>
               <p><%= simple_format(f.feedable.content) %></p>
               <p><small><em><%= strf(f.feedable.begin_time) %> ~ <%= strf(f.feedable.end_time) %></em></small></p>
              </blockquote>    
             </div>
           </div>
           <!-- ? -->

          </div>
