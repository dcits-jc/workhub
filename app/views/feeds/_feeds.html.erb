

<div class="row">
  <div class="col-md-12">
    <% @feeds.each do |f| %>

        <div class="panel panel-default">
          <div class="panel-heading">

            <!-- 个人信息 -->
            <div id="user_feeds_head_line" >
              <a href="#" class="thumbnail">
                <%= user_avatar(f.user) %>
              </a>              
            </div>
            <div id="user_feeds_info">
              <p id="user_feeds_name">
                <strong>
                  <%= f.user.name %>
